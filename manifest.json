{
  "name": "LinkedIn Pro Extension",
  "short_name": "LinkedIn Pro Extension",
  "description": "An extension for use LinkedIn Professional page",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "popup.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup",
    "default_icon": {
      "16": "/src/images/main/linkedin-16.png",
      "32": "/src/images/main/linkedin-32.png",
      "48": "/src/images/main/linkedin-48.png",
      "128": "/src/images/main/linkedin-128.png"
    }
  },
  "icons": {
    "16": "/src/images/main/linkedin-16.png",
    "32": "/src/images/main/linkedin-32.png",
    "48": "/src/images/main/linkedin-48.png",
    "128": "/src/images/main/linkedin-128.png"
  },
  "permissions": ["storage", "tabs", "alarms", "notifications"]
}
