{
  "manifest_version": 3,
  "name": "Linkedin Pro Extension",
  "short_name": "LinkedIn Pro Extension",
  "version": "0.1.0",
  "description": "An extension for use LinkedIn Professional page",
  "icons": {
    "16": "icons/main/linkedin-16.png",
    "32": "icons/main/linkedin-32.png",
    "48": "icons/main/linkedin-48.png",
    "128": "icons/main/linkedin-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Linkedin Pro Extension",
    "default_popup": "popup.html",
    "default_icons": {
      "16": "icons/main/linkedin-16.png",
      "32": "icons/main/linkedin-32.png",
      "48": "icons/main/linkedin-48.png",
      "128": "icons/main/linkedin-128.png"
    }
  },
  "options_page": "popup.html",
  "permissions": ["storage", "tabs", "alarms", "notifications"]
}
